<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
        "http://struts.apache.org/dtds/struts-2.5.dtd">

<struts>
    <!-- devMode equals debug information and reload everything for every request -->
    <constant name="struts.devMode" value="false" />
    <constant name="struts.ui.theme" value="simple" />

    <package name="menu_inicial" extends="struts-default">

        <default-action-ref name="index" />

        <global-results>
            <result name="error">/error.jsp</result>
        </global-results>

        <!-- all exceptions not caught by the application will lead to error.jsp -->
        <global-exception-mappings>
            <exception-mapping exception="java.lang.Exception" result="error" />
        </global-exception-mappings>

        <action name="login" class="menu_inicial.action.Login_action" method="execute">
            <result name="success">/login.jsp</result>
            <result name="insuccess">/login.jsp</result>
        </action>
       <!--<action name="menu_registo_login" class="menu_inicial.action.Menu_1_action" method="execute">
            <result name="registo">index.jsp</result>
            <result name="login">/menu_login_registo.jsp</result>
            <result name="insuccess">/index.jsp</result>
       </action>-->
        <action name="menu_registo" class="menu_inicial.action.Menu_login_action">
            <result name="success">login.jsp</result>
        </action>
        <action name="menu_login" class="menu_inicial.action.Menu_registo_action">
            <result name="success"> index.jsp</result>
        </action>
        <action name="index">
            <result>/index.jsp</result>
        </action>
    </package>
</struts>