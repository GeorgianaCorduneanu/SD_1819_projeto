<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
        "http://struts.apache.org/dtds/struts-2.5.dtd">

<struts>
    <!-- devMode equals debug information and reload everything for every request -->
    <constant name="struts.devMode" value="true" />
    <constant name="struts.ui.theme" value="simple" />

    <package name="primes" extends="struts-default">
        <default-action-ref name="index" />

        <global-results>
            <result name="error">/error.jsp</result>
        </global-results>

        <!-- all exceptions not caught by the application will lead to error.jsp -->
        <global-exception-mappings>
            <exception-mapping exception="java.lang.Exception" result="error" />
        </global-exception-mappings>

        <!-- 'index' action leads to the view provided by index.jsp -->
        <action name="index">
            <result>/index.jsp</result>
        </action>

        <!-- 'primes' action calls 'execute' in 'PrimesAction', followed by the view in 'primes.jsp' -->
        <action name="menu_inicial" class="menu_inicial.action.login_action" method="execute">
            <result name="success">/login.jsp</result> <!-- para diferentes retornos redirecionamos para diferences paginas>
      <!= quando recebe o nome success Ã© direcionado para primes.jsp> -->
        </action>

    </package>
</struts>